<?xml version="1.0" encoding="UTF-8"?>
<CLISH_MODULE xmlns="http://clish.sourceforge.net/XMLSchema" 
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
 xsi:schemaLocation="http://clish.sourceforge.net/XMLSchema
                     http://clish.sourceforge.net/XMLSchema/clish.xsd">
   <VIEW name="otu-view"
            prompt="${SYSTEM_NAME}(OTU slot[${nameId}])$ ">
<!--
     <PTYPE name="MODE_NAME"
            method="select"
            pattern="auto(1) L1channel(2) L2channel(3)"
            help="mode the set"/>

     <PTYPE name="BACK_MODE"
            method="select"
            pattern="auto(1) manual(2)"
            help="return mode"/>            
    -->         
       <!--=======================================================-->
            
        <COMMAND name="show"
                 help="Show the named view details">
            <ACTION builtin="clish_otu_system"/>
        </COMMAND>
     <COMMAND name="setotuinfo"
             help="Set slot info for system">
        <PARAM name="name"
               help="Port num"
              ptype="VBUNIT"/>             
        <PARAM name="perchannelnum"
               help="Xfp_property_source"
              ptype="VBUNIT"/>
        <PARAM name="porttype"
               help="Set port type"
              ptype="VBUNIT"/>
        <ACTION builtin="shell_setotu_info">${name} ${perchannelnum} ${porttype}</ACTION>
    </COMMAND>
    
     <COMMAND name="setotuport"
             help="set slot info for system">
        <PARAM name="name"
               help="port index"
              ptype="FPORT"/>             
        <PARAM name="distance"
               help="Set port distance"
              ptype="UINT"/>
        <PARAM name="maxrate"
               help="Set port maxrate"
              ptype="UINT"/>
        <PARAM name="wavelength"
               help="Set port wavelength"
              ptype="UINT"/>         
        <ACTION builtin="shell_setotuport_info">${name} ${distance} ${maxrate} ${wavelength}</ACTION>
    </COMMAND>    



        <COMMAND name="setotuview"
             help="set view info for system">
        <PARAM name="value1"
               help="Set port value"
              ptype="UINT"/>
        <PARAM name="value2"
               help="Set port value"
              ptype="UINT"/>
        <PARAM name="value3"
               help="Set port value"
              ptype="UINT"/>  
        <PARAM name="value4"
               help="Set port value"
              ptype="UINT"/>
        <PARAM name="value5"
               help="Set port value"
              ptype="UINT"/>
        <PARAM name="value6"
               help="Set port value"
              ptype="UINT"/> 
        <PARAM name="value7"
               help="Set port value"
              ptype="UINT"/>
        <PARAM name="value8"
               help="Set port value"
              ptype="UINT"/>
        <PARAM name="value9"
               help="Set port value"
              ptype="UINT"/> 
        <PARAM name="value10"
               help="Set port value"
              ptype="UINT"/>
        <ACTION builtin="shell_setotuview_info">${value1} ${value2} ${value3} ${value4} ${value5} ${value6} ${value7} ${value8} ${value9} ${value10}</ACTION>
    </COMMAND>
  
        <COMMAND name="exit"
                 help="Exit the named view"
                 view="enable-view"/>
    </VIEW>
</CLISH_MODULE>
